{
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "root": true,
  "plugins": [
    "prettier",
    "@typescript-eslint",
    "eslint-plugin-tsdoc"
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": ".",
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "tsdoc/syntax": "warn"
  }
}
